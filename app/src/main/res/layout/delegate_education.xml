<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="6dp">

            <TextView
                android:id="@+id/tv_education_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Education # 1"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_period"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_education_number"
                android:layout_marginTop="10dp"
                android:text="Period"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/et_time_span"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_period"
                android:layout_marginTop="8dp"
                android:hint="2008 - 2012" />

            <TextView
                android:id="@+id/tv_qualification"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/et_time_span"
                android:layout_marginTop="10dp"
                android:text="Qualification"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/et_qualification"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_qualification"
                android:layout_marginTop="8dp"
                android:hint="BS Computer Science" />

            <TextView
                android:id="@+id/tv_school"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/et_qualification"
                android:layout_marginTop="10dp"
                android:text="School"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/et_school"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_school"
                android:layout_marginTop="8dp"
                android:hint="Standford University" />

            <TextView
                android:id="@+id/remove_education"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="?attr/selectableItemBackground"
                android:padding="2dp"
                android:text="remove"
                android:textAllCaps="true"
                android:textSize="16sp" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>
