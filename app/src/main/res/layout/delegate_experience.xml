<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="6dp">

            <TextView
                android:id="@+id/tv_job_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Job # 1"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_period"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_job_number"
                android:layout_marginTop="10dp"
                android:text="Period"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/et_time_span"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_period"
                android:layout_marginTop="8dp"
                android:hint="2008 - 2012" />

            <TextView
                android:id="@+id/tv_job_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/et_time_span"
                android:layout_marginTop="10dp"
                android:text="Title"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/et_job_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_job_title"
                android:layout_marginTop="8dp"
                android:hint="Business Manager" />

            <TextView
                android:id="@+id/tv_company"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/et_job_title"
                android:layout_marginTop="10dp"
                android:text="Company"
                android:textSize="16sp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_company"
                android:layout_marginTop="8dp"
                android:hint="Samsung" />

            <TextView
                android:id="@+id/remove"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="remove"
                android:textAllCaps="true"
                android:textSize="18sp" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>
