<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:id="@+id/profile_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:elevation="4dp"
        android:minHeight="?attr/actionBarSize">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/button_settings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerHorizontal="true"
                android:layout_marginRight="10dp"
                android:background="?attr/selectableItemBackground"
                android:paddingTop="15dp"
                android:src="@mipmap/settings" />

            <TextView
                android:id="@+id/profile_title"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:paddingTop="10dp"
                android:text="My Profile"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                android:textStyle="bold" />
        </RelativeLayout>
    </android.support.v7.widget.Toolbar>

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_below="@+id/profile_toolbar"
        android:id="@+id/user_dp"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/camera" />

    <TextView
        android:id="@+id/name_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/user_dp"
        android:textSize="15sp"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="Husnain Hussi" />

    <TextView
        android:id="@+id/location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@mipmap/location_icon"
        android:layout_below="@+id/name_text_view"
        android:layout_marginTop="5dp"
        android:drawablePadding="5dp"
        android:textSize="12sp"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="multan" />

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/main_rel"
        android:layout_below="@+id/name_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="30dp"
        android:paddingLeft="30dp"
        android:weightSum="3.0">

        <RelativeLayout
            android:layout_marginTop="10dp"
            android:id="@+id/child_one"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.0">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/job_applied"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:background="@drawable/job_applied" />
            <TextView
                android:id="@+id/job_applied_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/job_applied"
                android:layout_marginTop="5dp"
                android:textSize="12sp"
                android:gravity="center"
                android:text="job Applied" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="10dp"
            android:id="@+id/child_two"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.0">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/job_saved"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:background="@drawable/job_saved"/>

            <TextView
                android:id="@+id/job_saved_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/job_saved"
                android:layout_marginTop="5dp"
                android:textSize="12sp"
                android:gravity="center"
                android:text="job saved" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/child_three"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.0">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/job_resume"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:background="@drawable/ic_resume"/>

            <TextView
                android:id="@+id/job_resume_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/job_resume"
                android:layout_marginTop="5dp"
                android:textSize="12sp"
                android:gravity="center"
                android:text="job resume" />
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/work_experience_layout"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_below="@+id/main_rel"
        android:layout_margin="40dp"
        android:background="#FFF">

        <TextView
            android:id="@+id/work_experience"
            android:text="Work Experience"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/services_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/work_experience"
            android:text="2016-2017 services"
            android:layout_margin="10dp"
            android:drawablePadding="5dp"
            android:textSize="15dp"
            android:drawableLeft="@mipmap/work_experience" />

        <TextView
            android:id="@+id/services_two_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/services_text_view"
            android:text="2017 services"
            android:layout_margin="10dp"
            android:drawablePadding="5dp"
            android:textSize="15dp"
            android:drawableLeft="@mipmap/work_experience" />

        <TextView
            android:id="@+id/edit_text_view"
            android:layout_alignParentRight="true"
            android:text="Edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:textSize="20dp" />


    </RelativeLayout>
</RelativeLayout>
