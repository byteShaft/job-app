<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f2f2">

    <android.support.v7.widget.Toolbar
        android:id="@+id/profile_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:elevation="4dp"
        android:minHeight="?attr/actionBarSize">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/profile_title"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10sp"
                android:gravity="center"
                android:text="Education"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/save"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="130dp"
                android:gravity="center"
                android:text="SAVE"
                android:textColor="@android:color/black"
                android:textSize="15sp"
                android:textStyle="bold" />
        </LinearLayout>
    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/Job_number_layout"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="#FFF"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/Job_number_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="10dp"
                    android:text="Education #1"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/Job_number_remove_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="10dp"
                    android:paddingLeft="80dp"
                    android:text="Remove"
                    android:textSize="18sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/period_layout"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="5dp"
                android:background="#FFF"
                android:orientation="horizontal">

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp">

                    <EditText
                        android:id="@+id/period__edit_text"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:hint="Period"
                        android:inputType="number"
                        android:paddingLeft="10dp"
                        android:paddingTop="@dimen/floating_hint_margin"
                        android:textColor="#000"
                        android:textSize="15dp" />
                </android.support.design.widget.TextInputLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/title_layout"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="5dp"
                android:background="#FFF"
                android:orientation="horizontal">

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp">

                    <EditText
                        android:id="@+id/tile_edit_text"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:hint="Education"
                        android:inputType="text"
                        android:paddingLeft="10dp"
                        android:paddingTop="@dimen/floating_hint_margin"
                        android:textColor="#000"
                        android:textSize="15dp" />
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/company_layout"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="5dp"
                android:background="#FFF"
                android:orientation="horizontal">

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp">

                    <EditText
                        android:id="@+id/company_edit_text"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:hint="School"
                        android:inputType="text"
                        android:paddingLeft="10dp"
                        android:paddingTop="@dimen/floating_hint_margin"
                        android:textColor="#000"
                        android:textSize="15dp" />
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>

            <Button
                android:layout_marginTop="20sp"
                android:layout_gravity="center_horizontal"
                android:text="ADD ANOTHER ONE"
                android:background="#FFF"
                android:gravity="center"
                android:textColor="#F03"
                android:textSize="18dp"
                android:layout_marginBottom="40dp"
                android:layout_width="400dp"
                android:layout_height="60dp" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>